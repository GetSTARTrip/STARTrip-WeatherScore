extends base.pug

block content
    h4 Update menu
    form(method="POST")
        input(name="title", placeholder="Menu Title", value=menu.title, required)
        input(placeholder="Description", required, type="text", name="description", minlength=20, value=menu.description)
        input(placeholder="Ingredients, separated by comma.", required, type="text", name="ingredients", value=menu.ingredients.join())
        input(value="Save",type="submit")