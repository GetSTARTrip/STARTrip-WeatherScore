extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") 가이드영상 업로드
        input(type="file", accept="video/*",  id="video", name="video")

        label(for="menuImage") 대표이미지 업로드(아직 기능구현이 안 되었습니다. 사용금지))
        input(type="file", accept="image/*",  id="menuImage", name="menuImage")

        label 메뉴명
        input(placeholder="메뉴명", required, type="text", name="title", maxlength=80)
        label 기본설명
        input(placeholder="설명", required, type="text", name="description", minlength=20)
        label 알레르기 성분
        input(placeholder="','로 구분합니다.", required, type="text", name="hashtags")
        label 원재료명
        input(placholder="원재료들 모두 입력", required, type="text", name="ingredients")
        label 영양성분 기입
        input(placeholder="100g당 칼로리", required, type="text", name="nt_calories")
        input(placeholder="100g당 탄수화물", required, type="text", name="nt_totalCarbohydrate")
        input(placeholder="100g당 당", required, type="text", name="nt_totalSugars")
        input(placeholder="100g당 단백질", required, type="text", name="nt_protein")
        input(placeholder="100g당 지방", required, type="text", name="nt_totalFat")
        input(placeholder="100g당 포화지방", required, type="text", name="nt_SaturatedFat")
        input(placeholder="100g당 트랜스지방", required, type="text", name="nt_transFat")
        input(placeholder="100g당 콜레스테롤", required, type="text", name="nt_cholesterol")
        input(placeholder="100g당 나트륨", required, type="text", name="nt_sodium")
        
        input(type="submit", value="메뉴 등록")