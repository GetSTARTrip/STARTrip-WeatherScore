doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") Home
                    if loggedIn
                        li
                            a(href="/menus/upload") 메뉴등록
                        li
                            a(href="/users/edit") 회원정보수정
                        li
                            a(href="/users/logout") 로그아웃

                    else
                        li
                            a(href="/join")  가입하기
                        li
                            a(href="/login")  로그인                   
                    li
                        a(href="/search") 알레르기 검색(지금은 메뉴명만)
                    
        main
            block content
    include partials/footer